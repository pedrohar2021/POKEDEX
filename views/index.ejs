<body>


    <header>
    <nav>

    <ul>
        <li> <a href="#home">HOME</a></li>
        <li> <a href="#cadastro"> CADASTRO</a></li>
        <li> <a href="#cards"> POKEMON</a></li>
    </ul>
    

    </nav>

    <section id="escrita">
        <img id="pokedex" src="https://pokedex.sleduardo.dev/img/logo.svg" alt="">
      </section>


    
</header>
    
    <main>

        <section id="cards">
            
            
            <% pokedex.forEach((pokemon) => { %>
                <div class="card">
                    <p>00<%= pokemon.id %></p>
                    <img src="<%= pokemon.imagem %>" alt="">
                    <h3><%= pokemon.nome %></h3>
                    <p class="descricao"><%= pokemon.descricao %></p>
                    <p>Tipo: <%= pokemon.tipo %></p>
                    <a id="apagar" href="/delete/<%= pokemon.id %>">Apagar</a>
                </div>
                <% }) %>
            </section>
            
            
            <div>
            <img id="poke" src="https://1.bp.blogspot.com/_KBmmkCxTLY8/TMBfCU6xtBI/AAAAAAAAAFI/Ia5W4Suucww/s1600/kawax-pokeball-3097.png" alt="">
        </div>

        
    </main>

